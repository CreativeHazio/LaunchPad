<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.AiSummarize">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:paddingStart="20dp"
            android:background="@drawable/rounded_desert_sunset_bg"
            android:gravity="center_vertical"
            android:text="@string/ai_summarize"
            android:textSize="@dimen/text_headings"
            android:fontFamily="@font/nexa_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:text="Choose option"
            android:fontFamily="@font/nexa_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/summarizers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/long_article_summarizer_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="5dp"
                android:padding="7dp"
                android:background="@drawable/rounded_desert_sunset_bg"
                android:text="Article Summarizer"
                android:textColor="@color/white"
                android:fontFamily="@font/nexa_light"
                android:textAllCaps="false"
                app:layout_constraintEnd_toStartOf="@+id/website_summarizer_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/website_summarizer_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:padding="7dp"
                android:background="@drawable/rounded_desert_sunset_bg"
                android:text="Website link summarizer "
                android:fontFamily="@font/nexa_light"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:layout_constraintEnd_toStartOf="@+id/youtube_video_link_summarizer_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/long_article_summarizer_btn"
                app:layout_constraintTop_toTopOf="@+id/long_article_summarizer_btn" />

            <Button
                android:id="@+id/youtube_video_link_summarizer_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:padding="7dp"
                android:background="@drawable/rounded_desert_sunset_bg"
                android:text="Youtube video link summarizer"
                android:fontFamily="@font/nexa_light"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/website_summarizer_btn"
                app:layout_constraintTop_toTopOf="@+id/long_article_summarizer_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/article_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/summarizers">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/enter_text_here"
                android:fontFamily="@font/nexa_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/article_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="450dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:padding="20dp"
                android:background="@drawable/transparent_desert_sunset_bg"
                android:fontFamily="@font/nexa_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Button
                android:id="@+id/clear_article_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/rounded_desert_sunset_bg"
                android:text="@string/clear_text"
                android:textAllCaps="false"
                android:fontFamily="@font/nexa_bold"
                app:layout_constraintTop_toBottomOf="@id/article_edt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/summarize_article_btn"/>
            <Button
                android:id="@+id/summarize_article_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_desert_sunset_bg"
                android:text="@string/summarize_text"
                android:textAllCaps="false"
                android:fontFamily="@font/nexa_bold"
                app:layout_constraintStart_toEndOf="@id/clear_article_btn"
                app:layout_constraintTop_toBottomOf="@id/article_edt"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/copy_summarized_txt_btn"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="30dp"
                android:elevation="5dp"
                android:src="@drawable/copy_text_icon"
                android:background="@drawable/rounded_desert_sunset_bg"
                app:layout_constraintTop_toTopOf="@id/summarized_txt_edt"
                app:layout_constraintBottom_toTopOf="@id/summarized_txt_edt"
                app:layout_constraintEnd_toEndOf="parent"/>


            <EditText
                android:id="@+id/summarized_txt_edt"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:scrollbars="vertical"
                android:background="@drawable/transparent_desert_sunset_bg"
                android:inputType="textMultiLine"
                android:fontFamily="@font/nexa_light"
                app:layout_constraintTop_toBottomOf="@id/summarize_article_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/website_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/summarizers">

            <TextView
                android:id="@+id/enter_website_link_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/enter_website_link_here"
                android:fontFamily="@font/nexa_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/website_link_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="450dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:padding="20dp"
                android:background="@drawable/transparent_desert_sunset_bg"
                android:fontFamily="@font/nexa_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_website_link_txt" />

            <Button
                android:id="@+id/clear_weblink_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/rounded_desert_sunset_bg"
                android:text="@string/clear_text"
                android:textAllCaps="false"
                android:fontFamily="@font/nexa_bold"
                app:layout_constraintTop_toBottomOf="@id/website_link_edt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/summarize_weblink_btn"/>
            <Button
                android:id="@+id/summarize_weblink_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:background="@drawable/rounded_desert_sunset_bg"
                android:text="@string/summarize_website"
                android:textAllCaps="false"
                android:fontFamily="@font/nexa_bold"
                app:layout_constraintStart_toEndOf="@id/clear_weblink_btn"
                app:layout_constraintTop_toBottomOf="@id/website_link_edt"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/copy_summarized_website_btn"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="30dp"
                android:elevation="5dp"
                android:src="@drawable/copy_text_icon"
                android:background="@drawable/rounded_desert_sunset_bg"
                app:layout_constraintTop_toTopOf="@id/summarized_website_edt"
                app:layout_constraintBottom_toTopOf="@id/summarized_website_edt"
                app:layout_constraintEnd_toEndOf="parent"/>


            <EditText
                android:id="@+id/summarized_website_edt"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:scrollbars="vertical"
                android:background="@drawable/transparent_desert_sunset_bg"
                android:inputType="textMultiLine"
                android:fontFamily="@font/nexa_light"
                app:layout_constraintTop_toBottomOf="@id/summarize_weblink_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/youtube_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/summarizers">

            <TextView
                android:id="@+id/enter_youtube_link_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/enter_youtube_link_here"
                android:fontFamily="@font/nexa_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/youtube_link_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="450dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:padding="20dp"
                android:background="@drawable/transparent_desert_sunset_bg"
                android:fontFamily="@font/nexa_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_youtube_link_txt" />

            <TextView
                android:id="@+id/enter_youtube_video_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/enter_youtube_video_name_here"
                android:fontFamily="@font/nexa_bold"
                app:layout_constraintTop_toBottomOf="@id/youtube_link_edt"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/youtube_video_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="250dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:padding="20dp"
                android:background="@drawable/transparent_desert_sunset_bg"
                android:fontFamily="@font/nexa_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_youtube_video_name_txt"/>

            <Button
                android:id="@+id/clear_youtube_link_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/rounded_desert_sunset_bg"
                android:text="@string/clear_text"
                android:textAllCaps="false"
                android:fontFamily="@font/nexa_bold"
                app:layout_constraintTop_toBottomOf="@id/youtube_video_name_edt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/summarize_youtube_link_btn"/>
            <Button
                android:id="@+id/summarize_youtube_link_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:background="@drawable/rounded_desert_sunset_bg"
                android:text="@string/summarize_youtube"
                android:textAllCaps="false"
                android:fontFamily="@font/nexa_bold"
                app:layout_constraintStart_toEndOf="@id/clear_youtube_link_btn"
                app:layout_constraintTop_toBottomOf="@id/youtube_video_name_edt"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/copy_summarized_youtube_btn"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="30dp"
                android:elevation="5dp"
                android:src="@drawable/copy_text_icon"
                android:background="@drawable/rounded_desert_sunset_bg"
                app:layout_constraintTop_toTopOf="@id/summarized_youtube_edt"
                app:layout_constraintBottom_toTopOf="@id/summarized_youtube_edt"
                app:layout_constraintEnd_toEndOf="parent"/>


            <EditText
                android:id="@+id/summarized_youtube_edt"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:scrollbars="vertical"
                android:background="@drawable/transparent_desert_sunset_bg"
                android:inputType="textMultiLine"
                android:fontFamily="@font/nexa_light"
                app:layout_constraintTop_toBottomOf="@id/summarize_youtube_link_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>