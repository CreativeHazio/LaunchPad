<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarText" parent="ThemeOverlay.AppCompat">
        <item name="fontFamily">@font/nexa_bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="rounded_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="NavDrawerText" parent="android:Widget.TextView">
        <item name="fontFamily">@font/nexa_bold</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nexa_bold</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="fontFamily">@font/nexa_bold</item>
    </style>
</resources>